<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nomadicmonkeyapps.moneys"
    android:versionCode="3"
    android:versionName="1.2"
     >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="10" />

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.CAMERA"/>
	
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Black.NoTitleBar">
        <activity
            android:name="com.nomadicmonkeyapps.moneys.Act_TabHost"
            android:label="Moneys" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.nomadicmonkeyapps.moneys.Act_Main"
            android:label="Main" />
        <activity
            android:name="com.nomadicmonkeyapps.moneys.Act_History"
            android:label="History" />
        <activity
            android:name="com.nomadicmonkeyapps.moneys.Act_EnterItem"
            android:label="Enter Item"
            android:theme="@style/NoTitleDialog"
            />  
        <activity
            android:name="com.nomadicmonkeyapps.moneys.Act_ImageViewer"
            android:label="View Image" />
    </application>

</manifest>